{{ 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css' | asset_url | stylesheet_tag }}
<script src="{{ 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js' | asset_url }}" defer="defer"></script>

<div class="slider-wrapper">
    <div class="slider-items">
        <div class="slider-item">1</div>
        <div class="slider-item">2</div>
        <div class="slider-item">3</div>
    </div>
</div>

<script>
    $('.slider-items').slick();
</script>

{% schema %}
{
  "name": "Products Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Products"
    }
  ],
  "presets": [
    {
      "name": "Products Slider"
    }
  ]
}
{% endschema %}
